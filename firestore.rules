service cloud.firestore {
  match /databases/{database}/documents {
    match /admin/{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }
    match /designers/{designerId}/{document=**} {
      allow read, write: if request.auth.uid == designerId;
    }
    match /brands/{brandId}/{document=**} {
      allow read, write: if request.auth.uid == brandId;
    }
    // Ad group data including assets and recipe documents
    match /adGroups/{groupId} {
      allow read, write: if request.auth != null;

      match /assets/{assetId} {
        allow read, write: if request.auth != null;
      }

      match /recipes/{recipeId} {
        allow read, write: if request.auth != null;

        match /assets/{assetId} {
          allow read, write: if request.auth != null;
        }
      }

      match /responses/{responseId} {
        allow read, write: if request.auth != null;
      }

      match /recipeResponses/{responseId} {
        allow read, write: if request.auth != null;
      }
    }
  }
}
