service cloud.firestore {
  match /databases/{database}/documents {
    match /admin/{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }
    match /designers/{designerId}/{document=**} {
      allow read, write: if request.auth.uid == designerId;
    }
    match /brands/{brandId}/{document=**} {
      allow read, write: if request.auth.uid == brandId;
    }
    match /users/{userId} {
      allow read, write: if request.auth != null &&
                         (request.auth.uid == userId ||
                          request.auth.token.admin == true);
    }
    match /adGroups/{groupId}/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /adAssets/{assetId}/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
